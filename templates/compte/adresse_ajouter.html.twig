{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse - La Marque 42 {% endblock %}

{% block content %}


    <h1>Ajouter une adresse</h1>

    <a href="{{ path('compte') }}" class="float-right">Retour</a><br>
    <hr>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.name) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.nom) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.prenom) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.telephone) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.entreprise) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.adresse) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.codePostal) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.ville) }}
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
