{% extends 'base.html.twig' %}

{% block title %}Nos produits - My Dress{% endblock %}

{% block content %}

    <h1>Nos produits</h1>

    <div class="row">

        {% for product in products %}
            <div class="col-md-4">
                {# {{ dump(product) }} #}
                <div class="produit-item">

                    <img src="/uploads/{{ product.illustration }}" alt="{{product.nom }}" class="img-fluid">
                    <h5>{{product.nom }}</h5>
                    <span>{{ product.subtitle }}</span>
                    {{ product.prix }}
                </div>

            </div>
        {% endfor %}

    </div>

{% endblock %}
